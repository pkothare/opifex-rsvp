@page
@model Opifex.Rsvp.Pages.AddZoomGuestModel

@{
    ViewData["Title"] = "AddZoomGuest";
}

<div class="row">
    <div class="col-md-12 col-lg-8 offset-lg-2">
        <h1>Add Guest</h1>
        <p>Specify the name and email of the guest that will be attending over Zoom.</p>
        <hr />
        <form method="post">
            <div class="form-group">
                <span asp-validation-for="ZoomGuest.Rsvp" class="text-danger"></span>
                <label asp-for="ZoomGuest.Name" class="control-label"></label>
                <input asp-for="ZoomGuest.Name" class="form-control" />
                <span asp-validation-for="ZoomGuest.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZoomGuest.Email" class="control-label"></label>
                <input asp-for="ZoomGuest.Email" class="form-control" />
                <span asp-validation-for="ZoomGuest.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
